{
	"name": "Jupyter",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": ["--gpus", "all"],

	"workspaceMount": "source=${localWorkspaceFolder},target=/home/jovyan/app,type=bind",
	"workspaceFolder": "/home/jovyan/app",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-toolsai.jupyter",
				"esbenp.prettier-vscode"
			]
		}
	}
}
